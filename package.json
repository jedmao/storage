{
  "name": "@jedmao/storage",
  "version": "2.0.1",
  "description": "A Storage class that implements the Storage interface of the Web Storage API.",
  "main": "dist/Storage.js",
  "types": "dist/Storage.d.ts",
  "scripts": {
    "clean": "rimraf coverage dist *.log* ts-*",
    "codecov": "codecov -f coverage/lcov.info",
    "lint": "eslint src/**/*.ts",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "precover": "rimraf coverage",
    "cover": "jest --coverage",
    "pretest": "npm run lint",
    "test": "jest --watch",
    "prepublishOnly": "npm run lint && npm run cover && npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "tsc --noEmit && npm run cover"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,md}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "verbose": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "automock": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jedmao/storage.git"
  },
  "keywords": [
    "storage",
    "web",
    "typescript"
  ],
  "author": "Jed Mao <jedmao@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jedmao/storage/issues"
  },
  "homepage": "https://github.com/jedmao/storage#readme",
  "devDependencies": {
    "@jedmao/tsconfig": "^0.3.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.10",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "husky": "^4.0.9",
    "jest": "^24.8.0",
    "jest-watch-typeahead": "^0.4.2",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2"
  }
}
